<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/sc_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="?attr/colorPrimaryVariant"
        app:elevation="3dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="6dp">


        <LinearLayout
            android:id="@+id/sc_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="4dp"
                android:background="@color/teal_700">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sc_usrImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
                    app:srcCompat="@drawable/sample_user" />

                <TextView
                    android:id="@+id/sc_txtUserFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    tools:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:background="@color/teal_700"
                    android:paddingStart="10dp" />

                <TextView
                    android:id="@+id/sc_txtClassDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    tools:text="dsfs"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/teal_700"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/sc_txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    tools:text="dfdsf"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@color/teal_700"
                    android:layout_marginEnd="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sc_lyUserDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sc_txtCardNumbers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="dsfdfdsfds"
                        android:textColor="#252121"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sc_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:text="dsfdssfds"
                        android:textColor="#252121"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sc_txtDeniedMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_red_dark"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>